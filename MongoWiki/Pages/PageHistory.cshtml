@page "/pages/{slug}/history"
@model MongoWiki.Pages.PageHistoryModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using MongoWiki.Models
@{
    ViewData["Title"] = $"{Model.WikiPage.Name} - History";
}

<h2>@Model.WikiPage.Name</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Date</th>
            <th scope="col">Comment</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (WikiPageRevision revision in Model.Revisions)
        {
            <tr>
                <th scope="row">@revision.RevisionNumber</th>
                <td>@revision.Created.ToShortDateString()</td>
                <td>@revision.Comment</td>
                <td><a asp-page="ViewRevision" asp-route-slug="@Model.WikiPage.Slug" asp-route-revisionNumber="@revision.RevisionNumber" role="button" class="btn btn-outline-secondary">View</a></td>
            </tr>
        }
    </tbody>
</table>
