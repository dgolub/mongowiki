@page
@model MongoWiki.Pages.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using MongoWiki.Models
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col">
        <h2>Index</h2>
    </div>
    <div class="col-auto">
        <a asp-page="CreatePage" role="button" class="btn btn-outline-dark">Create Page</a>
    </div>
</div>

<ul>
    @foreach (WikiPage wikiPage in Model.WikiPages)
    {
        <li>
            <a asp-page="ViewPage" asp-route-slug="@wikiPage.Slug">@wikiPage.Name</a>
        </li>
    }
</ul>
